/* pages/goods_list/index.wxss */
.goods_item {
  display: flex;
  border-bottom: 4rpx solid #ccc;
}
.goods_item .image_container {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_item .image_container image {
  width: 70%;
}
.goods_item .info_container {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_item .info_container .goods_name {
  overflow: hidden;
}
.goods_item .info_container .goods_price {
  color: var(--themeColor);
  font-size: 33rpx;
}
