/* pages/category/index.wxss */
pages {
  height: 100%;
}
.categories {
  height: 100%;
}
.categories .category_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.categories .category_container .menu_list {
  flex: 2;
}
.categories .category_container .menu_list .menu_items {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.categories .category_container .menu_list .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.categories .category_container .content_all {
  flex: 5;
}
.categories .category_container .content_all .content_group .content_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.categories .category_container .content_all .content_group .content_title .delimeter {
  color: #ccc;
  padding: 0 10rpx;
}
.categories .category_container .content_all .content_group .content_list {
  display: flex;
  flex-wrap: wrap;
}
.categories .category_container .content_all .content_group .content_list navigator {
  width: 33.33%;
  text-align: center;
}
.categories .category_container .content_all .content_group .content_list navigator image {
  width: 50%;
}
