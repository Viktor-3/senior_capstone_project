/* pages/goods_detail/index.wxss */
page {
  padding-bottom: 100rpx;
}
.swiper swiper {
  height: 64vw;
  text-align: center;
  background-color: rgb(243, 232, 232);
}
.swiper swiper image {
  width: 60%;
}
.price {
  font-size: 33rpx;
  font-weight: 600;
  padding: 16rpx;
  color: var(--themeColor);
}
.row {
  display: flex;
  border-top: 5rpx solid #f1ecec;
  border-bottom: 5rpx solid #c4c3c3;
  padding: 11rpx 0;
}
.row .name {
  flex: 5;
  color: #070606;
  font-size: 29rpx;
  padding: 0 11rpx;
  display: -webkit-box;
  overflow: hidden;
}
.row .collection {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #0f0f0f;
}
.info .info_title {
  font-size: 31rpx;
  color: var(--themeColor);
  font-weight: 500;
  padding: 22rpx;
}
.bot {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  background-color: #eee1e1;
  display: flex;
}
.bot .tool {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  font-size: 20rpx;
  position: relative;
  border-top: 2rpx solid #d3cdcd;
}
.bot .tool button {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
}
.bot .cart {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #c2e018;
  font-weight: 500;
}
.bot .buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #b62626;
  font-weight: 500;
}
