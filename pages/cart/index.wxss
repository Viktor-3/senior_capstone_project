/* pages/cart/index.wxss */
page 
{
  padding-bottom: 80rpx;
}

image 
{
  width: 50%;
}

.number_edit .goods_number
{
  align-items: center;
  justify-content: center;
  display: flex;
  width: 50rpx;
  height: 50rpx;
}

#empty
{
  justify-content: center;
  align-items: center;
  text-align: right;
  padding: 30%;
  font-size: large;
  color: brown;
}

.number_edit
{
  border: 2rpx solid rgb(224, 208, 208);
}

button
{
  padding: 0 10rpx;
}

#footer
{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}

#checkout
{
  flex: 4;
  background-color: rgb(0, 0, 0);
  color: rgb(255, 255, 255);
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;
}

